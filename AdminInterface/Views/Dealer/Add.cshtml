                                    <a class="btn btn-primary" href="javascript:ManageUser('@Model.DealerId');">Manage</a>
                                </div>
                            }
                        </div>*@
                    <div class="form-group pull-left">
                        @if (ViewBag.isEdit == "F")
                        {
                            <a href="/dealer/dealer-listing?liId=dealerList" class="btn btn-info">Back</a>
                        }
                        else if (ViewBag.isEdit == "T")
                        {
                            <a href="/dealer/manage/@Model.DealerId" class="btn btn-info">Back</a>
                        }

                    </div>
                    <div class="form-group pull-right">
                        @if (ViewBag.isEdit == "F")
                        {
                            <input type="button" class="btn btn-primary btn-block " value="Add" onclick="AddAgent(this)" data-loading-text="Please wait..." />
                        }
                        else if (ViewBag.isEdit == "T")
                        {
                            <input type="button" class="btn btn-primary btn-block " value="Update" onclick="EditAgent(this)" data-loading-text="Please wait..." />
                        }
                    </div><!-- /.form-group -->
                </div><!-- /.col -->
            </div>
        </div><!-- /.box-body -->
    </div>
    <div class="box box-default hide" id="UploadImageBox">
        <div class="box-header with-border">
            <h3 class="box-title">Upload Dealer Image</h3>
            <div class="box-tools pull-right">
                <button class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
            </div>
        </div><!-- /.box-header -->
        <div class="box-body">

            <div class="row">
                <div class="col-md-8">
                    <label class="pull-left">Upload Dealer image here </label>
                </div>
                <div class="col-md-4">
                    <form id="fileupload" action="/Upload/UploadDealerImageHandler.ashx" method="POST" enctype="multipart/form-data">
                        <div class="fileupload-buttonbar">
                            <div class="span7">
                                <span class="btn btn-success fileinput-button">
                                    <i class="fa fa-plus-circle"></i>
                                    <input type="file" name="files[]">
                                </span>
                                <button type="button" id="btnImageUpload" class="btn btn-primary start" data-uniqueid='@Model.DealerId' data-type='newhome'>
                                    <i class="fa fa-cloud-upload"></i>
                                </button>
                                @if (Model.DealerId != null)
                                {
                                    <input type="hidden" id="hddnDealerId" value="@Model.DealerId" />

                                }
                            </div>
                        </div>
                        <table class="table table-striped"><tbody class="files" data-toggle="modal-gallery" data-target="#modal-gallery"></tbody></table>
                        @*<a data-toggle="tooltip" data-placement="top" title="Click here to send activation mail." id="btnactive_" class="btn btn-block btn-primary pull-right" href="javascript:SendActivationMail();">Upload</a>*@
                    </form>

                </div>

            </div><!-- /.col -->
        </div>
    </div>
</section>
