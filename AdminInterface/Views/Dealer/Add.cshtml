@model Repository.Models.Admin.Dealer.User

<section class="content">
    <div class="box box-default">
        <div class="box-header with-border">
            @if (ViewBag.isEdit == "F")
            {
                <h3 class="box-title">Add New Dealer Here</h3>
            }
            else if (ViewBag.isEdit == "T")
            {
                <h3 class="box-title">Edit Dealer Here</h3>
            }


            @*<div class="pull">
                    <a href="/dealer/dealer-listing-ajax-handler/" class="btn btn-info">Back</a>
                </div>*@
            <div class="box-tools pull-right">
                <button class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
            </div>
        </div><!-- /.box-header -->
        <div class="box-body">
            <div class="row">
                <div class="col-md-12">
                    @if (ViewBag.isEdit == "F")
                    {
                        <div id="sucessalert" class="alert alert-success alert-dismissible" style="display: none">
                            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                            <h4><i class="icon fa fa-check"></i> Dealer Added Successfully.</h4>
                            <span></span>
                        </div>
                    }
                    else if (ViewBag.isEdit == "T")
                    {  <div id="sucessalert" class="alert alert-success alert-dismissible" style="display: none">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                        <h4><i class="icon fa fa-check"></i> Dealer Updated Successfully.</h4>
                        <span></span>
                    </div>
                    }
                    <div id="failurealert" class="alert alert-danger alert-dismissible" style="display: none">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                        <h4><i class="icon fa fa-ban"></i> Something went wrong! Please try again later</h4>
                        <span></span>
                    </div>
                    <div id="duplicatealert" class="alert alert-danger alert-dismissible" style="display: none">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                        <h4><i class="icon fa fa-ban"></i> Dealer Already Exists</h4>
                        <span></span>
                    </div>
                </div>

                <div class="col-md-6">

                    <div class="form-group">
                        @Html.Label("Name")
                        @Html.TextBoxFor(m => m.DealerName, new { @class = "form-control" })

                    </div>
                </div><!-- /.col -->
                <div class="col-md-6">

                    <div class="form-group">
                        @Html.Label("Address")
                        @Html.TextBoxFor(m => m.DealerAddress, new { @class = "form-control" })

                    </div>
                </div><!-- /.col -->
            </div><!-- /.row -->
            <div class="row">

                <div class="col-md-6">

                    <div class="form-group">
                        @Html.Label("City")
                        @Html.TextBoxFor(m => m.DealerCity, new { @class = "form-control" })

                    </div>
                </div><!-- /.col -->
                <div class="col-md-6">

                    <div class="form-group">
                        @Html.Label("State")

                        @Html.TextBoxFor(m => m.DealerState, new { @class = "form-control" })

                    </div>
                </div><!-- /.col -->
            </div><!-- /.row -->

            <div class="row">

                <div class="col-md-6">

                    <div class="form-group">
                        @Html.Label("Zip")
                        @Html.TextBoxFor(m => m.DealerZip, new { @class = "form-control" })

                    </div>
                </div><!-- /.col -->
                <div class="col-md-6">

                    <div class="form-group">
                        @Html.Label("Phone")

                        @Html.TextBoxFor(m => m.DealerPhone, new { @class = "form-control" })

                    </div>
                </div><!-- /.col -->
            </div>
            <div class="row">

                <div class="col-md-6">

                    <div class="form-group">
                        @Html.Label("Email")
                        @Html.TextBoxFor(m => m.DealerEmail, new { @class = "form-control" })

                    </div>
                </div><!-- /.col -->
                <div class="col-md-6">

                    <div class="form-group">
                        @Html.Label("Bio")
                        @Html.TextAreaFor(m => m.DealerBio, new { @class = "form-control" })

                    </div>
                </div><!-- /.col -->


            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.Label("Featured Dealer")
                        @*@if (Model.IsFeatured)
                            {*@
                        <input id="chkIsFeaturedAdd" data-uniqueid="@Model.DealerId" name="chkIsFeaturedAdd" type="checkbox" />
                        @*}*@
                        @*else
                            {
                                <input id="chkIsFeatured" data-uniqueid="@Model.DealerId" type="checkbox" value="De-Active" />
                            }*@

                    </div>
                </div><!-- /.col -->
                <div class="col-md-6">
                    @Html.Label("Certified Dealer")
                    <div class="form-group">
                        @*@if (Model.IsCertified)
                            {*@
                        <input id="chkIsCertifiedAdd" name="chkIsCertifiedAdd" data-uniqueid="@Model.DealerId" type="checkbox" />
                        @*}*@
                        @*else
                            {
                                <input id="chkIsCertified" data-uniqueid="@Model.DealerId" type="checkbox" value="De-Active" />
                            }*@


                    </div>
                </div><!-- /.col -->

            </div>
            <div class="row">
                <div class="col-md-12">
                    @*<div class="form-group pull-left">
                            @if (!string.IsNullOrEmpty(@Model.DealerId))
                            {
